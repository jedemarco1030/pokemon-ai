generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Profile {
  id         String   @id @db.Uuid
  first_name String?
  last_name  String?
  email      String?
  created_at DateTime @default(now()) @db.Timestamptz(6)

  @@map("profiles")
}

model Favorite {
  user_id      String   @db.Uuid
  pokemon_id   Int
  pokemon_name String
  created_at   DateTime @default(now()) @db.Timestamptz(6)

  @@id([user_id, pokemon_id])
  @@map("favorites")
}
